<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarNote" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/color_light_orange</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:queryHint">@android:color/white</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">serif</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextTitle" parent="Text">
        <item name="android:maxLength">50</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextShowDescription" parent="Text">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:minLines">5</item>
        <item name="android:background">@color/color_light_yellow</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="TextShowInformation" parent="Text">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CardViewItemNote" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
        <item name="cardCornerRadius">@dimen/dp_5</item>
    </style>

    <style name="ButtonDialog">
        <item name="android:padding">@dimen/dp_2</item>
        <item name="android:background">@drawable/border_button_dialog</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/color_light_pink</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
